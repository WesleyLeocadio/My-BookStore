<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#011F27"

    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Store"
            android:textColor="#0BCFA7"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="-125dp"
            app:srcCompat="@drawable/icon" />
    </LinearLayout>

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#011F27"
        android:gravity="center"
        android:text="Cadastrar"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSearchBook"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  Search " android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

    <Button
        android:id="@+id/btnAutoComplete"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  AutoComplete "
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

    <Button
        android:id="@+id/btnListView"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  ListView "
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

    <Button
        android:id="@+id/btnGridView"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  GridView "
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>




    <Button
        android:id="@+id/btnRecycler"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  Recycler "
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

    <Button
        android:id="@+id/btnDrapDrop"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="SwipeDragDrop"
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

    <Button
        android:id="@+id/btnPageView"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="  Page View "
        android:gravity="center"
        android:background="#011F27"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp" android:layout_marginStart="20dp" android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.586"/>

</LinearLayout>